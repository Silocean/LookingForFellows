<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color" >

    <RelativeLayout
        android:id="@+id/modifypassword_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/main_titlebarbg" >

        <Button
            android:id="@+id/modifypassword_goback_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/goback_icon_selector" />

        <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/modifypassword_save"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/personsigns_icon_selector"
            android:text="确定"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/modifypassword_nowpassword"
        android:layout_width="270dip"
        android:layout_height="50dip"
        android:layout_below="@id/modifypassword_titlebar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dip" >

        <EditText
            android:id="@+id/modifypassword_now_editText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/leftmenu_itembg_normal"
            android:drawableLeft="@drawable/settings_lock_icon"
            android:hint="输入当前密码" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/modifypassword_newpassword"
        android:layout_width="270dip"
        android:layout_height="50dip"
        android:layout_below="@id/modifypassword_nowpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dip" >

        <EditText
            android:id="@+id/modifypassword_new_editText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/leftmenu_itembg_normal"
            android:drawableLeft="@drawable/settings_lock_icon"
            android:hint="输入新密码" />
    </RelativeLayout>

</RelativeLayout>