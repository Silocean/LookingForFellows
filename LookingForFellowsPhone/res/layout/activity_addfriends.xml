<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color" >
    <RelativeLayout
        android:id="@+id/addfriends_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/main_titlebarbg" >
        <Button
            android:id="@+id/addfriends_goback_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/goback_icon_selector" />
        <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加好友"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/addfriends_searchother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addfriends_titlebar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="15dip"
        android:paddingTop="15dip" >
        <RelativeLayout
            android:layout_width="280dip"
            android:layout_height="wrap_content" >
            <Button
                android:id="@+id/addfriends_searchother_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/leftmenuitem_invitebutton_selector"
                android:text="搜索其他省份好友" />
        </RelativeLayout>
    </RelativeLayout>
    <com.hblg.lookingfellow.selfdefinedwidget.PullDownView
        android:id="@+id/searchFriendList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/addfriends_searchother"
        android:cacheColorHint="#00000000"
        android:divider="@color/black_half"
        android:dividerHeight="1dip"
        android:scrollbars="none" >
    </com.hblg.lookingfellow.selfdefinedwidget.PullDownView>
</RelativeLayout>