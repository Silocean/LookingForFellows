<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color" >

    <RelativeLayout
        android:id="@+id/sendpost_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/main_titlebarbg" >

        <Button
            android:id="@+id/sendpost_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/goback_icon_selector" />

        <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="发帖"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/sendpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/sendpost_icon_selector" />
    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/sendpost_third_relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"  >

            <Button
                android:id="@+id/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftmenuitem_invitebutton_selector"
                android:text="编辑模版" />

            <Button
                android:id="@+id/atfriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/background"
                android:layout_marginLeft="5dip"
                android:background="@drawable/leftmenuitem_invitebutton_selector"
                android:text="艾特好友" />

            <Button
                android:id="@+id/addpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/atfriend"
                android:layout_marginLeft="5dip"
                android:background="@drawable/leftmenuitem_invitebutton_selector"
                android:text="添加图片" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sendpost_second_relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_above="@id/sendpost_third_relativelayout"
        android:layout_below="@id/sendpost_titlebar" >

        <LinearLayout
            android:id="@+id/sendpost_txt_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
             <LinearLayout 
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_weight="1.9" >
             </LinearLayout>

            <EditText
                android:id="@+id/postTxt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/post_bg1"
                android:gravity="top"
                android:hint="骚年说点儿什么吧" />
             <LinearLayout 
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_weight="1.9">
             </LinearLayout>
            
        </LinearLayout>
    </RelativeLayout>

   

</RelativeLayout>