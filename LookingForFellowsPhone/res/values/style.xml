<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="AppBaseTheme" parent="@android:style/Theme.NoTitleBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/MyActivitySwitchAnimation</item>
    </style>
    
    <style name="MyActivitySwitchAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/main_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/main_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <!-- <item name="android:activityCloseExitAnimation">@anim/push_right_out</item> -->
    </style>

    <style name="leftmenu_listitem_textstyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="listitem_postlayout_textstyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#626262</item>
    </style>

    <style name="personinfo_textstyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#626262</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="personinfo_settings_right_textstyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#bcbcbc</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/translate_in</item>
        <item name="android:windowExitAnimation">@anim/translate_out</item>
    </style>
    
</resources>