<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/content"
      android:background="@color/bg_color"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent" >
     <RelativeLayout
		android:layout_width="fill_parent"
      	android:layout_height="45dip"
      	android:id="@+id/chooseprovince_titlebar"
      	android:background="@drawable/main_titlebarbg" >
		<Button
			android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:id="@+id/chooseprovince_goback_button"
      		android:background="@drawable/goback_icon_selector" />
      	<TextView
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:id="@+id/titlebar_title"
      		android:text="选择地区"
      		android:layout_centerHorizontal="true"
      		android:layout_centerVertical="true"
      		android:textColor="@color/white"
      		android:textSize="18sp"
      		/>
  </RelativeLayout>
  <RelativeLayout
  	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/chooseprovince_titlebar" >
   	<ListView
       android:id="@+id/provinceList"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:scrollbars="none"
       android:layout_marginTop="20dip"
       android:layout_marginBottom="20dip"
       android:cacheColorHint="#00000000"
       android:divider="@null" />
  </RelativeLayout>
</RelativeLayout>
