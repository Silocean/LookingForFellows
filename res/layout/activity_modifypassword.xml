<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/bg_color" >
  <RelativeLayout
		android:layout_width="fill_parent"
      	android:layout_height="45dip"
      	android:id="@+id/modifypassword_titlebar"
      	android:background="@drawable/main_titlebarbg" >
		<Button 
			android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:id="@+id/modifypassword_goback_button"
      		android:background="@drawable/goback_icon_selector" />
      	<TextView
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:id="@+id/titlebar_title"
      		android:text="修改密码"
      		android:layout_centerHorizontal="true"
      		android:layout_centerVertical="true"
      		android:textColor="@color/white"
      		android:textSize="18sp"
      		/>
      	<Button 
      		android:layout_width="60dip"
      		android:layout_height="wrap_content"
      		android:id="@+id/modifypassword_save"
      		android:text="确定"
      		android:textColor="@color/white"
      		android:background="@drawable/personsigns_icon_selector"
      		android:layout_centerVertical="true"
      		android:layout_alignParentRight="true"
      		android:layout_marginRight="5dip" />
	</RelativeLayout>
	<RelativeLayout
  		android:layout_width="270dip"
      	android:layout_height="50dip"
      	android:id="@+id/modifypassword_nowpassword"
      	android:layout_below="@id/modifypassword_titlebar"
      	android:layout_marginTop="25dip"
      	android:layout_centerHorizontal="true" >
  		<EditText
  			android:layout_width="fill_parent"
      		android:layout_height="fill_parent"
      		android:id="@+id/modifypassword_now_editText"
      		android:background="@drawable/leftmenu_itembg_normal"
      		android:hint="输入当前密码"
      		android:drawableLeft="@drawable/settings_lock_icon"
      		 />
      </RelativeLayout>
      <RelativeLayout
  		android:layout_width="270dip"
      	android:layout_height="50dip"
      	android:id="@+id/modifypassword_newpassword"
      	android:layout_below="@id/modifypassword_nowpassword"
      	android:layout_marginTop="15dip"
      	android:layout_centerHorizontal="true" >
  		<EditText
  			android:layout_width="fill_parent"
      		android:layout_height="fill_parent"
      		android:id="@+id/modifypassword_new_editText"
      		android:background="@drawable/leftmenu_itembg_normal"
      		android:hint="输入新密码"
      		android:drawableLeft="@drawable/settings_lock_icon"
      		 />
      </RelativeLayout>
</RelativeLayout>
