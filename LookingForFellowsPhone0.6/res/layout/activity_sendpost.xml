<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/bg_color" >
  <RelativeLayout
		android:layout_width="fill_parent"
      	android:layout_height="45dip"
      	android:id="@+id/sendpost_titlebar"
      	android:background="@drawable/main_titlebarbg" >
		<Button 
			android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:id="@+id/sendpost_goback"
      		android:background="@drawable/goback_icon_selector" />
      	<TextView
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:id="@+id/titlebar_title"
      		android:text="发帖"
      		android:layout_centerHorizontal="true"
      		android:layout_centerVertical="true"
      		android:textColor="@color/white"
      		android:textSize="18sp"
      		/>
      	<Button 
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
      		android:id="@+id/sendpost"
      		android:background="@drawable/sendpost_icon_selector"
      		android:layout_centerVertical="true"
      		android:layout_alignParentRight="true"
      		android:layout_marginRight="5dip" />
	</RelativeLayout>
	<RelativeLayout
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendpost_titlebar"
        android:id="@+id/sendpost_second_relativelayout" >
		<EditText
			android:layout_width="fill_parent"
        	android:layout_height="45dip"
        	android:singleLine="true"
        	android:hint="标题"
        	android:id="@+id/sendpost_title"
        	android:background="@null" />
	</RelativeLayout>
	<RelativeLayout
		android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/sendpost_second_relativelayout"
        android:id="@+id/sendpost_third_relativelayout" >
		<include layout="@layout/line" />
	</RelativeLayout>
	<RelativeLayout
		android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/sendpost_third_relativelayout"
        android:id="@+id/sendpost_fourth_relativelayout" >
		<com.hblg.lookingfellow.selfdefinedwidget.SendpostEditText
			android:layout_width="fill_parent"
       		android:layout_height="fill_parent"
       		android:hint="内容"
       		android:id="@+id/sendpost_content"
       		android:background="@null"
       		android:gravity="top"
       		android:scrollbars="vertical" />
	</RelativeLayout>
	<RelativeLayout
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dip" >
		<Button
			android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:id="@+id/senpost_bottombar_emotionbutton"
       		android:background="@drawable/sendpost_bottombar_emotion_icon_selector"
       		android:layout_alignParentLeft="true"
       		android:layout_marginLeft="5dip" />
       	<Button
			android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:id="@+id/senpost_bottombar_atbutton"
       		android:background="@drawable/sendpost_bottombar_at_icon_selector"
       		android:layout_toRightOf="@id/senpost_bottombar_emotionbutton"
       		android:layout_marginLeft="20dip" />
       	<Button
			android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:id="@+id/senpost_bottombar_picturebutton"
       		android:background="@drawable/sendpost_bottombar_picture_icon_selector"
       		android:layout_toRightOf="@id/senpost_bottombar_atbutton"
       		android:layout_marginLeft="20dip" />
	</RelativeLayout>
</RelativeLayout>
